{
    "info": {
        "description": "Python extension for generating and solving Sudoku puzzles - based on libsudoku.",
        "title": "py_libsudoku",
        "version": "1.0.0"
    },
    "paths": {
        "/v1/board/state-flags": {
            "get": {
                "tags": [
                    "Boards"
                ],
                "summary": "Retrieves the state flags of a given board",
                "requestBody": {
                    "description": "The board to be evaluated",
                    "required": true,
                    "content": {
                        "application/json": {
                            "type": "object",
                            "properties": {
                                "board": {
                                    "type": "array",
                                    "items": {
                                        "type": "integer",
                                        "minimum": 0,
                                        "maximum": 9,
                                        "minItems": 1,
                                        "maxItems": 81
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BoardFlagsSchema"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "invalid board parameter"
                    }
                }
            }
        }
    },
    "openapi": "3.0.2",
    "components": {
        "schemas": {
            "BoardFlagsSchema": {
                "type": "object",
                "properties": {
                    "isComplete": {
                        "type": "boolean"
                    },
                    "isEmpty": {
                        "type": "boolean"
                    },
                    "isValid": {
                        "type": "boolean"
                    }
                }
            }
        }
    }
}